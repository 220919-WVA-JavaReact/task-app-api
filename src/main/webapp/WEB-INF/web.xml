<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>Task-App</display-name>

    <servlet>
        <servlet-name>SanityServlet</servlet-name>
        <servlet-class>com.revature.servlets.SanityServlet</servlet-class>

        <load-on-startup>1</load-on-startup> <!-- Tells Tomcat to eagerly create this servlet -->
    </servlet>

    <servlet-mapping>
        <servlet-name>SanityServlet</servlet-name>
        <url-pattern>/sanity</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>user-servlet</servlet-name>
        <servlet-class>com.revature.servlets.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>user-servlet</servlet-name>
        <url-pattern>/users/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>auth-servlet</servlet-name>
        <servlet-class>com.revature.servlets.AuthServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>auth-servlet</servlet-name>
        <url-pattern>/auth</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>CustomFilter</filter-name>
        <filter-class>com.revature.filters.CorsFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>CustomFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>